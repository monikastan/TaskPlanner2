<div class="col-md-4 col-md-offset-4", style="margin-top: 65px">
    
    <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST">

        <h3>Registration form:</h3>

        <div class="form-group">
            {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': 'Email'|trans } }) }}
            {{ form_errors(form.email) }}
        </div>

        <div class="form-group">
            {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'placeholder': 'Username'|trans } }) }}
            {{ form_errors(form.username) }}
        </div>

        <div class="form-group">
            {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder': 'Password'|trans } }) }}
            {{ form_errors(form.plainPassword.first) }}
        </div>

        <div class="form-group">
            {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'placeholder': 'Confirm password'|trans } }) }}
            {{ form_errors(form.plainPassword.second) }}
        </div>

        {{ form_rest(form) }}

        
            <input class="btn btn-primary" type="submit" value="{{ 'Register'|trans }}">
        
</div>