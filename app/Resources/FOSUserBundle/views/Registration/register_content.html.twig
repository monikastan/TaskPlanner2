<div class="col-md-4 col-md-offset-4">

    <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST">


        <div class="logo" align="center"><h3>Registration:</h3></div>
        <div class="login-form-1">
            <div class="login-form-main-message"></div>
            <div class="main-login-form">
                <div class="login-group">

                    {{ form_start(form, {'attr': {'class': 'text-left'}}) }}
                    <div class="form-group">   
                        {{ form_label(form.email, 'Email') }}
                        {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
                        {{ form_errors(form.email) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.username, 'Username') }}
                        {{ form_widget(form.username, { 'attr': {'class': 'form-control'} }) }}
                        {{ form_errors(form.username) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.plainPassword.first, 'Password') }}
                        {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control'} }) }}
                        {{ form_errors(form.plainPassword.first) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.plainPassword.second, 'Confirm password') }}
                        {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control'} }) }}
                        {{ form_errors(form.plainPassword.second) }}
                    </div>

                    {{ form_rest(form) }}
                </div>


                <input class="btn btn-primary" type="submit" value="{{ 'Register'|trans }}">
            </div>
        </div>
</div>

