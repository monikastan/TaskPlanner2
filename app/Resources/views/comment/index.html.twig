{% extends 'base.html.twig' %}

{% block body %}
  
    <h1>Comments list</h1>

    <table class="table">
        <thead>
            <tr>
                {#<th>Id</th>#}
                <th>Text</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                {#<td><a href="{{ path('comment_show', { 'id': comment.id }) }}">{{ comment.id }}</a></td>#}
                <td>{{ comment.text }}</td>
                <td>{% if comment.date %}{{ comment.date|date('Y-m-d') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('comment_show', { 'id': comment.id }) }}" class="btn btn-primary">show</a>
                        </li>
                        <li>
                            <a href="{{ path('comment_edit', { 'id': comment.id }) }}" class="btn btn-primary">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('comment_new') }}" class="btn btn-primary">Create a new comment</a>
        </li>
    </ul>
   
{% endblock %}
