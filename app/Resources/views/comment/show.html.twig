{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-md-4 col-md-offset-4">
        <h1>Comment</h1>

        <table class="table">
            <tbody>
                {# <tr>
                    <th>Id</th>
                    <td>{{ comment.id }}</td>
                </tr> #}
                <tr>
                    <th>Text</th>
                    <td>{{ comment.text }}</td>
                </tr>
                <tr>
                    <th>Date</th>
                    <td>{% if comment.date %}{{ comment.date|date('Y-m-d') }}{% endif %}</td>
                </tr>
            </tbody>
        </table>
        <table class="table">
            <tr>
                <td>
                    <a href="{{ path('comment_index') }}" class="btn btn-primary">Back to the list</a>
                </td>
                <td>
                    <a href="{{ path('comment_edit', { 'id': comment.id }) }}" class="btn btn-primary">Edit</a>
                </td>
                <td>
                    {{ form_start(delete_form) }}
                    <input type="submit" value="Delete" class="btn btn-primary">
                    {{ form_end(delete_form) }}
                </td>
            </tr>
        </table>

    </div>
{% endblock %}
